import java.util.*;

public class Main
{


		public static void main(String[] args)
		{
				int neg = 0;
				int pos = 0;
				double count = 0;
				Scanner input = new Scanner(System.in);
				
				int sum = 0;
				int data; // variables outside of a loop can be incremented 
				do
				{
					System.out.println("Enter an integer, the input ends if it is 0: ");
				
					data = input.nextInt();
				
					input.nextLine();
					if(data <0)
					{
						neg++;
					}
					else
					{
						pos++;
					}
					sum+=data;
					count++;
					
				}while(data!=0);
				double av = sum/count;
				System.out.printf("The sum is %d and the average is %4.2f.\nThe total negative #'s are %d and the total positive #'s are %d", sum, av, neg, pos );
		
		
		
		
		
		
		}



}